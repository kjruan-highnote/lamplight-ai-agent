{
  "id": "corporate",
  "name": "Corporate Professional",
  "description": "Clean, professional theme for enterprise environments",
  "author": "GECK Team",
  "version": "1.0.0",
  "isDark": false,
  
  "colors": {
    "primary": "#2563eb",
    "primaryHover": "#1d4ed8",
    "primaryActive": "#1e40af",
    "primaryBorder": "#3b82f6",
    "primaryBackground": "#dbeafe",
    "primaryShadow": "rgba(37, 99, 235, 0.2)",
    
    "secondary": "#64748b",
    "secondaryHover": "#475569",
    "secondaryBorder": "#cbd5e1",
    "secondaryBackground": "#f1f5f9",
    
    "success": "#10b981",
    "warning": "#f59e0b",
    "danger": "#ef4444",
    "info": "#3b82f6",
    
    "background": "#ffffff",
    "surface": "#f8fafc",
    "surfaceHover": "#f1f5f9",
    "border": "#e2e8f0",
    "borderHover": "#cbd5e1",
    
    "text": "#0f172a",
    "textSecondary": "#475569",
    "textMuted": "#94a3b8",
    "textInverse": "#ffffff",
    "placeholder": "#94a3b8"
  },
  
  "typography": {
    "fontFamily": {
      "base": "-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif",
      "mono": "'SF Mono', 'Monaco', 'Inconsolata', monospace",
      "display": "-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem"
    },
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    }
  },
  
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem"
  },
  
  "borders": {
    "radius": {
      "none": "0",
      "sm": "0.25rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "full": "9999px"
    },
    "width": {
      "thin": "1px",
      "base": "1px",
      "thick": "2px"
    }
  },
  
  "effects": {
    "shadow": {
      "none": "none",
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)",
      "glow": "0 0 0 3px rgba(37, 99, 235, 0.1)"
    },
    "transition": {
      "fast": "all 0.15s ease",
      "base": "all 0.2s ease",
      "slow": "all 0.3s ease"
    },
    "blur": {
      "none": "0",
      "sm": "4px",
      "md": "8px",
      "lg": "16px"
    }
  }
}