# Local Development Configuration
# Copy this file to .env.development.local for local development with local MongoDB

# Local MongoDB Configuration
# The app will automatically use local MongoDB when running in development mode
# If local MongoDB is not available, it will fallback to the configured MONGODB_URI
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=geck_dev

# Development Authentication
# Enable mock authentication with pre-configured dev users
REACT_APP_USE_DEV_AUTH=true

# Auto-login as a specific role (optional)
# Options: 'engineer', 'solutions', 'admin'
REACT_APP_DEV_AUTO_LOGIN=engineer

# Netlify Dev Settings
# These are automatically set by netlify dev command
# NODE_ENV=development
# NETLIFY_DEV=true

# JWT Secret for local development
JWT_SECRET=dev-secret-key-change-in-production

# Optional: Use a different port for local MongoDB
# MONGODB_URI=mongodb://localhost:27018

# Optional: Use MongoDB with authentication
# MONGODB_URI=mongodb://username:password@localhost:27017/geck_dev?authSource=admin

# Debug Settings
# REACT_APP_DEBUG_PERMISSIONS=true
# REACT_APP_DEBUG_DATABASE=true