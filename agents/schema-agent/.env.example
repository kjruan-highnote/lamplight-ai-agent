# GraphQL Schema QA API Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Authentication (set to 'false' for no authentication)
ENABLE_AUTH=false
API_KEY=your-secret-api-key-here

# CORS Configuration  
# Use "*" to allow all origins, or specify specific domains
ALLOWED_ORIGINS=*

# Request Limits
MAX_QUESTION_LENGTH=1000

# Model Configuration
DEFAULT_MODEL=llama3

# Embeddings Paths
INDEX_PATH=embeddings/index.faiss
METADATA_PATH=embeddings/metadata.json

# Logging
LOG_LEVEL=INFO