# MCP Server Environment Variables

# LLM Configuration
LLM_MODEL=llama3
LLM_API_BASE=http://localhost:11434
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Knowledge Base
KB_INDEX_PATH=embeddings/unified.index
KB_METADATA_PATH=embeddings/metadata.json
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Agent Ports (for backward compatibility)
SCHEMA_AGENT_PORT=8000
DOCUMENT_AGENT_PORT=8001
ADVISORY_AGENT_PORT=8002
SHIP_AGENT_PORT=8003

# MCP Server Settings
MCP_SERVER_NAME=lamplight-mcp
MCP_SERVER_VERSION=1.0.0
MCP_LOG_LEVEL=INFO

# Feature Flags
ENABLE_STREAMING=true
ENABLE_CACHING=true
ENABLE_AUTO_ROUTING=true
ENABLE_RESPONSE_SYNTHESIS=true