{
  "server": {
    "name": "lamplight-mcp",
    "version": "1.0.0",
    "description": "Unified MCP server for Lamplight AI agents"
  },
  "llm": {
    "model": "llama3",
    "temperature": 0.7,
    "max_tokens": 2000,
    "api_base": "http://localhost:11434",
    "timeout": 30
  },
  "knowledge_base": {
    "faiss_index_path": "embeddings/unified.index",
    "metadata_path": "embeddings/metadata.json",
    "chunk_size": 1000,
    "overlap": 100,
    "embedding_model": "all-MiniLM-L6-v2",
    "embedding_dimension": 384
  },
  "agents": {
    "schema_port": 8000,
    "document_port": 8001,
    "advisory_port": 8002,
    "ship_port": 8003
  },
  "features": {
    "streaming": true,
    "caching": true,
    "auto_routing": true,
    "response_synthesis": true
  },
  "limits": {
    "max_context_length": 12000,
    "max_search_results": 10,
    "cache_ttl_seconds": 3600
  }
}